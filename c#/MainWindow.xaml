<Window x:Class="RC4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RC4"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="RC4" Height="146.5" Width="282"
        Background="LightGray" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="MsgTextBlock" Text="{Binding value}" HorizontalAlignment="Left" Margin="18,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="19" Width="237"/>
        <Label Content="密码：" HorizontalAlignment="Left" Margin="18,59,0,0" VerticalAlignment="Top" Height="23" Width="42" RenderTransformOrigin="0.426,0.03"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="65,59,0,0" VerticalAlignment="Top" Height="23" Width="132"/>
        <Button x:Name="OKBtn" Content="确定" HorizontalAlignment="Left" Margin="211,59,0,0" VerticalAlignment="Top" Width="44" Height="23" Click="Run_RC4"/>
        <ProgressBar x:Name="ProgressBar" Value="0" Maximum="100" HorizontalAlignment="Left" Height="11" Margin="18,38,0,0" VerticalAlignment="Top" Width="237"/>
    </Grid>
</Window>
